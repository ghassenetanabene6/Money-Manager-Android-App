<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="100"
    tools:context=".AjoutAchat"
    android:background="@drawable/jamaa"
    >
    <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="10"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="80"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:text="Achat :"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:gravity="bottom"
            />
        <EditText
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_weight="10"
            android:layout_height="0dp"
            android:hint="Exemple : Livre"
            android:id="@+id/editAchat"
            />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:text="Prix :"
            android:textSize="30dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:gravity="bottom"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_weight="10"
            android:layout_height="0dp"
            android:hint="Exemple : 100 DT"
            android:inputType="number"
            android:layout_gravity="center"
            android:id="@+id/editPrix"
            />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="35"
            android:layout_gravity="center"
            android:background="@drawable/submit"
            android:id="@+id/sumbitBouton"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:text="Si lâ€™argent ne fait pas le bonheur, rendez-le."
            android:textSize="15dp"
            android:textColor="#fff"
            android:gravity="bottom|center"
            />
    </LinearLayout>

</LinearLayout>